{
  "name": "redhat-airline-api",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Vince Tsugranes",
    "url": "https://github.com/vincent-tsugranes"
  },
  "scripts": {
    "build": "tsc",
    "nodeshift": "nodeshift --expose",
    "postinstall": "npm run build",
    "format": "prettier --write --single-quote src/**/*.ts",
    "start": "node src/index.js",
    "start-dev": "nodemon -e ts -x ts-node src/index.ts | pino-pretty -t",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincent-tsugranes/redhat-airline-api.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^5.2.0",
    "husky": "^4.3.8",
    "luxon": "^1.25.0",
    "morgan": "^1.10.0",
    "nodeshift": "^8.0.0",
    "typescript-rest": "^3.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/luxon": "^1.25.1",
    "nodemon": "^2.0.7",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3",
    "@types/pino": "~6.3.5",
    "pino-pretty": "~4.1.0",
    "prettier": "~2.2.1"
  }
}
